<resources>

    <!-- Light Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!--Ground Colors (Light)-->
        <item name="android:statusBarColor">@color/statusBarColorLight</item>
        <item name="activityBackgroundColor">@color/backgroundColorLight</item>
        <item name="toolbarColor">@color/toolbarColorLight</item>
        <item name="cardViewColor">@color/cardViewColorLight</item>

        <!--Text Colors (Light)-->
        <item name="primaryTextColor">@color/primaryTextColorLight</item>
        <item name="secondaryTextColor">@color/secondaryTextColorLight</item>
        <item name="thirdTextColor">@color/thirdTextColorLight</item>
        <item name="labelsTextColor">@color/labelTextColorLight</item>

        <!--Floating Action Button Colors (Light)-->
        <item name="floatingActionMenuNormalColor">@color/floatingActionButtonNormalColorLight</item>
        <item name="floatingActionMenuPressedColor">@color/floatingActionButtonPressedColorLight</item>
        <item name="floatingActionMenuRippleColor">@color/floatingActionButtonRippleColorLight</item>

        <!--FAB Labels Colors (Light)-->
        <item name="labelsColorNormal">@color/labelsColorNormalLight</item>
        <item name="labelsColorPressed">@color/labelsColorPressedLight</item>
        <item name="labelsColorRipple">@color/labelsColorRippleLight</item>

        <item name="colorControlNormal">@color/editTextNormalColorLight</item>
        <item name="colorControlActivated">@color/editTextActivatedColorLight</item>

        <!--Reminder Buttons Text Colors (Light)-->
        <item name="reminderSaveButtonTextColor">@color/reminderSaveButtonTextColorLight</item>
        <item name="reminderCancelButtonTextColor">@color/reminderCancelButtonTextColorLight</item>

        <!--Reminder Buttons Colors (Light)-->
        <item name="saveButtonColorNormal">@color/saveButtonColorNormalLight</item>
        <item name="saveButtonColorFocus">@color/saveButtonColorFocusLight</item>
        <item name="saveButtonColorPressed">@color/saveButtonColorPressedLight</item>

    </style>



    <!-- Dark Theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!--Ground Colors (Dark)-->
        <item name="android:statusBarColor">@color/statusBarColorDark</item>
        <item name="activityBackgroundColor">@color/backgroundColorDark</item>
        <item name="toolbarColor">@color/toolbarColorDark</item>
        <item name="cardViewColor">@color/cardViewColorDark</item>

        <!--Text Colors (Dark)-->
        <item name="primaryTextColor">@color/primaryTextColorDark</item>
        <item name="secondaryTextColor">@color/secondaryTextColorDark</item>
        <item name="thirdTextColor">@color/thirdTextColorDark</item>
        <item name="labelsTextColor">@color/labelTextColorDark</item>

        <!--Floating Action Button Colors (Dark)-->
        <item name="floatingActionMenuNormalColor">@color/floatingActionButtonNormalColorDark</item>
        <item name="floatingActionMenuPressedColor">@color/floatingActionButtonPressedColorDark</item>
        <item name="floatingActionMenuRippleColor">@color/floatingActionButtonRippleColorDark</item>

        <!--FAB Labels Colors (Dark)-->
        <item name="labelsColorNormal">@color/labelsColorNormalDark</item>
        <item name="labelsColorPressed">@color/labelsColorPressedDark</item>
        <item name="labelsColorRipple">@color/labelsColorRippleDark</item>

        <item name="colorControlNormal">@color/editTextNormalColorDark</item>
        <item name="colorControlActivated">@color/editTextActivatedColorDark</item>

        <!--Reminder Buttons Text Colors (Dark)-->
        <item name="reminderSaveButtonTextColor">@color/reminderSaveButtonTextColorDark</item>
        <item name="reminderCancelButtonTextColor">@color/reminderCancelButtonTextColorDark</item>

        <!--Reminder Buttons Colors (Dark)-->
        <item name="saveButtonColorNormal">@color/saveButtonColorNormalDark</item>
        <item name="saveButtonColorFocus">@color/saveButtonColorFocusDark</item>
        <item name="saveButtonColorPressed">@color/saveButtonColorPressedDark</item>

    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">?attr/editTextNormalColor</item>
        <item name="colorControlActivated">?attr/editTextActivatedColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
