<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/activity_post_details_toolbar"
        layout="@layout/add_reminder_common_variables" />

    <TextView
        android:id="@+id/add_daily_reminder_every_word_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="11dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/add_reminder_every_word"
        android:textColor="?attr/primaryTextColor"
        android:textSize="14sp"
        android:labelFor="@id/add_daily_reminder_how_many_days_et"
        app:layout_constraintBottom_toBottomOf="@+id/add_daily_reminder_how_many_days_et"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/add_daily_reminder_how_many_days_et"
        android:theme="@style/EditTextTheme"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textColor="?attr/primaryTextColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/add_daily_reminder_every_word_tv"
        app:layout_constraintTop_toBottomOf="@+id/activity_post_details_toolbar" />

    <TextView
        android:id="@+id/add_daily_reminder_days_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="11dp"
        android:text="@string/add_daily_reminder_day"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:textColor="?attr/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/add_daily_reminder_how_many_days_et"
        app:layout_constraintStart_toEndOf="@+id/add_daily_reminder_how_many_days_et"/>

</androidx.constraintlayout.widget.ConstraintLayout>