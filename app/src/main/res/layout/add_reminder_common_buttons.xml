<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/add_reminder_common_buttons_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/add_reminder_common_buttons_save_button"
        android:textAllCaps="false"
        android:textColor="?attr/reminderSaveButtonTextColor"
        android:background="@drawable/general_button_background_selector"
        android:stateListAnimator="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_reminder_common_buttons_cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="@string/add_reminder_common_buttons_cancel_button"
        android:textAllCaps="false"
        android:textColor="?attr/reminderCancelButtonTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/add_reminder_common_buttons_save_btn"
        app:layout_constraintEnd_toStartOf="@+id/add_reminder_common_buttons_save_btn"
        app:layout_constraintTop_toTopOf="@+id/add_reminder_common_buttons_save_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>